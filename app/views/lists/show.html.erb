<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p>Watch some great movies.</p>
  </div>
</div>

<div class="p-3 text-decoration-none">
<div class="mt-4 border-bottom border-secondary-subtle border-2 mb-4 text-decoration-none">
<ul class="list-inline">
  <% @bookmarks.each do |bookmark| %>
     <li class="mb-5">
     <h2><%= bookmark.movie.title %></h2>
     <p><%= bookmark.movie.overview %></p>
     <img src="<%= bookmark.movie.poster_url %>" alt="image not found" class="img-thumbnail img-fluid" width=200 >
     <p><%= bookmark.comment %></p>
     <h5><%= bookmark.movie.rating %> ⭐️</h5>
     <%= link_to "Delete", list_bookmark_path(@list, bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure" } %>
     </li>
  <% end %>
</ul>
</div>
</div>


<div>
    <%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
    <%= link_to "Back to lists", lists_path %>
</div>
